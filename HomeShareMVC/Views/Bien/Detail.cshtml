@model HomeShareMVC.Models.PaysBienMembre

@{
    ViewBag.Title = "Detail";
}
<div class="container">
    <div class="properties-listing spacer">

        <div class="row">
            <div class="col-lg-9 col-sm-8 ">

                <h2>@Model.UnBien.Titre</h2>
                <div class="row">
                    <div class="col-lg-8">
                        <div class="property-images">
                            <img src="~/Content/images/@Model.UnBien.Photo" alt="" style="width: 300px;" />
                        </div>

                        <div class="spacer">
                            <h4><span class="glyphicon glyphicon-th-list"></span>Description</h4>
                            <p>@Model.UnBien.DescLong</p>
                            @{
                                Html.RenderPartial("_mesOptions", Model.UnBien.MesOptions);
                            }
                        </div>
                        <div>
                            <h4><span class="glyphicon glyphicon-map-marker"></span> Localisation</h4>
                            <div class="well"><iframe width="100%" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=Pulchowk,+Patan,+Central+Region,+Nepal&amp;aq=0&amp;oq=pulch&amp;sll=37.0625,-95.677068&amp;sspn=39.371738,86.572266&amp;ie=UTF8&amp;hq=&amp;hnear=Pulchowk,+Patan+Dhoka,+Patan,+Bagmati,+Central+Region,+Nepal&amp;ll=27.678236,85.316853&amp;spn=0.001347,0.002642&amp;t=m&amp;z=14&amp;output=embed"></iframe></div>
                        </div>
                        <div>
                            @{

                                Html.RenderPartial("_mesAvis", Model.UnBien.MesAvisApprouve);
                            }
                        </div>
                        @if (HttpContext.Current.Session["Login"] != null)
                        { 
                                <form action="~/Bien/InsererAvis" method="post">
                                <label>Laissez votre avis </label>
                                <textarea name="txtAvis" rows="2" cols="90"></textarea>
                                <label>Note</label>
                                <input type="number" min="0" max="10" name="noteAvis" />
                                <br/>
                                <input type="submit" value="Valider" />

                            </form>
                        }
                        

                    </div>
                    <div class="col-lg-4">
                        <div class="col-lg-12  col-sm-6">
                            <div class="property-info">
                                <p class="price">@Model.UnPays.Libelle</p>
                                <p class="area"><span class="glyphicon glyphicon-map-marker"></span>@Model.UnBien.Numero @Model.UnBien.Rue, @Model.UnBien.Ville, @Model.UnPays.Libelle</p>

                                <div class="profile">
                                    <span class="glyphicon glyphicon-user"></span> Propriétaire
                                    <p>@Model.UnMembre.Nom @Model.UnMembre.Prenom</p>
                                </div>
                            </div>

